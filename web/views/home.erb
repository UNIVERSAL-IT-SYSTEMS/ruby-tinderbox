<div id="ruby_targets">
	<h3>Ruby Targets <small class="pull-right"><a href="#navbar">Top</a></small></h3>
</div>
<table class="table table-bordered table-condensed" id="ruby_targets_table">
	<tr>
		<th>Package</th>
		<th colspan="3">Targets</th>
	</tr>
	<%packages.each do |package|%>
		<tr>
			<td width="50%">
				<%="#{package[:category]}/#{package[:name]}#{package[:slot] == "0" ? "" : ":#{package[:slot]}"}"%>
			</td>
			<td width="16.5%" class="<%=package[:r19_target] == "nil" ? "danger" : "success"%>">
				<%=package[:r19_target]%>
			</td>
			<td width="16.5%" class="<%=package[:r20_target] == "nil" ? "danger" : "success"%>">
				<%=package[:r20_target]%>
			</td>
			<td width="16.5%" class="<%=package[:r21_target] == "nil" ? "danger" : "success"%>">
				<%=package[:r21_target]%>
			</td>
		</tr>
	<%end%>
</table>
