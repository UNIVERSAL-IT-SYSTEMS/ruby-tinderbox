<div id="ruby_targets">
	<h3>Ruby Targets</h3>
</div>

<form class="pull-right">
	<input type="checkbox" onclick="$('td:contains(\'+amd64\')').parent().toggle();" checked> amd64
	<input type="checkbox" onclick="$('td:contains(\'+~amd64\')').parent().toggle();" checked> ~amd64
</form>

<table id="sortable" class="table table-bordered table-condensed">
	<thead>
		<tr>
			<th width="52%">Package</th>
			<th width="12%">Ruby 1.9</th>
			<th width="12%">Ruby 2.0</th>
			<th width="12%">Ruby 2.1</th>
			<th width="12%">Ruby 2.2</th>
		</tr>
	</thead>
	<%Package.order{[category, lower(name), version]}.each do |package|%>
		<tr>
			<td width="52%">
				<%=package[:identifier]%>
			</td>
			<td width="12%" class="<%=package[:r19_target] == "nil" ? "danger" : "success"%>">
				<%=package[:r19_target]%>
			</td>
			<td width="12%" class="<%=package[:r20_target] == "nil" ? "danger" : "success"%>">
				<%=package[:r20_target]%>
			</td>
			<td width="12%" class="<%=package[:r21_target] == "nil" ? "danger" : "success"%>">
				<%=package[:r21_target]%>
			</td>
			<td width="12%" class="<%=package[:r22_target] == "nil" ? "danger" : "success"%>">
				<%=package[:r22_target]%>
			</td>
			<td style="display:none;">
				+<%=package[:amd64_keyword]%>
			</td>
		</tr>
	<%end%>
</table>
