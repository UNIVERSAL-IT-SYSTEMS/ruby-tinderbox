<div id="ruby_targets">
	<h3>Ruby Targets</h3>
</div>
<table class="table table-bordered table-condensed" id="ruby_targets_table">
	<tr>
		<th>Package</th>
		<th colspan="3">Targets</th>
	</tr>
	<%packages.each do |package|%>
		<tr>
			<td width="52%">
				<%category = "#{package[:category]}"%>
				<%name = "/#{package[:name]}"%>
				<%version = "-#{package[:version]}"%>
				<%revision = package[:revision] == "r0" ? "" : "-#{package[:revision]}"%>
				<%slot = package[:slot] == "0" ? "" : ":#{package[:slot]}"%>
				<%=category + name + slot%>
			</td>
			<td width="16%" class="<%=package[:r19_target] == "nil" ? "danger" : "success"%>">
				<%=package[:r19_target]%>
			</td>
			<td width="16%" class="<%=package[:r20_target] == "nil" ? "danger" : "success"%>">
				<%=package[:r20_target]%>
			</td>
			<td width="16%" class="<%=package[:r21_target] == "nil" ? "danger" : "success"%>">
				<%=package[:r21_target]%>
			</td>
		</tr>
	<%end%>
</table>
